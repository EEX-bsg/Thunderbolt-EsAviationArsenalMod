				</CapsuleCollider>
			</Colliders>
				
				<Mesh name="100mmShell"> 
					<Position x="0.0" y="0.0" z="-0.1" />
					<Rotation x="0.0" y="-90.0" z="0.0" />
					<Scale x="0.2" y="0.2" z="0.2" />
				</Mesh>
				
				<Texture name="metalGrey" />
				
				
				<Mass>0.5</Mass>
				<Drag>0.2</Drag>
				<AngularDrag>0.0</AngularDrag>
				<IgnoreGravity>False</IgnoreGravity>
				<EntityDamage>20</EntityDamage>
				<BlockDamage>0.3</BlockDamage>
				<Attaches>false</Attaches>
				<CollisionTypeS>ContinuousDynamic</CollisionTypeS>
				
				<BounceCombineType>Minimum</BounceCombineType>
				<BounceStr>0.0</BounceStr>
				<!-- Deault = Average, select from Average, Maximum, Minimum, Mutiply -->
				<FrictionCombineType>Average</FrictionCombineType>
				<FrictionStr>10.0</FrictionStr>
				
			</ShootingState>
			
			<FireKey key="fire" />
			<PowerSlider key="power" />
			<RateOfFireSlider key="rate-of-fire" />
			<HoldToShootToggle key="hold-to-shoot" />
			<useDelayTimer>true</useDelayTimer>
			<DelayTimerSlider key="delay-timer" />
			
			<ProjectileStart>
				<Position x="0.0" y="0.0" z="5.0" />
				<Rotation x="0.0" y="0.0" z="90.0" />
				<Scale x="1.0" y="1.0" z="1.0" />
			</ProjectileStart>
			
			<ShotFlashPosition>
				<Position x="0.0" y="0.0" z="3.3" />
				<Rotation x="0.0" y="0.0" z="90.0" />
				<Scale x="2.0" y="2.0" z="2.0" />
			</ShotFlashPosition>
			
			<ShowPlaceholderProjectile>false</ShowPlaceholderProjectile>
			
			<DefaultAmmo>1200</DefaultAmmo>
			<AmmoType>Cannon</AmmoType>
			<ProjectilesExplode>true</ProjectilesExplode>
			<useExplodeRotation>true</useExplodeRotation>
			<ExplodeRadius>0.6</ExplodeRadius>
			<ExplodePower>1000.0</ExplodePower>
			<ExplodeUpPower>0.0</ExplodeUpPower>
			
			<SupportsExplosionGodTool>False</SupportsExplosionGodTool>
			<ProjectilesDespawnImmediately>false</ProjectilesDespawnImmediately>
			
			<AssetBundleName name="TEAA_Effects" />
			<ExplodeEffect>machinegunHit</ExplodeEffect>
			<ShotFlashEffect>NewMachineGunShotEffect</ShotFlashEffect>
			<TrailEffect>newBulletTrailGV100</TrailEffect>
			<!--<BulletEffect>bulleteffect</BulletEffect>-->
			
			<RandomFuseInterval>0.0</RandomFuseInterval>
			<FuseDelayTime>0.0</FuseDelayTime>
			
			<RecoilMultiplier>0.3</RecoilMultiplier>
			<RandomInterval>0.03</RandomInterval>
			<RandomDiffusion>0.005</RandomDiffusion>
			
			<PoolSize>50</PoolSize>
			
			<useMagazine>true</useMagazine>
			<MagazineInfo>
				<MagazineCapacitySlider key="capacity" />
				<ReloadTimeSlider key="reload-time" />
				<useReloadKey>true</useReloadKey>
				<ReloadKey key="reload" />
				<forceAutoReload>false</forceAutoReload>
				<useAutoReloadToggle>true</useAutoReloadToggle>
				<AutoReloadToggle key="auto-reload" />
				<ReloadSounds>
					<AudioClip name="Reload" />
				</ReloadSounds>
			</MagazineInfo>
			
			<Sounds>
				<AudioClip name="machinegunfire" />
			</Sounds>
			<HitSounds>
				<AudioClip name="machinegunhit" />
			</HitSounds>
	</AdShootingProp>
</Modules>
